{
  "name": "@ctxvm/sdk",
  "version": "0.1.0",
  "description": "CtxVM SDK for JavaScript/TypeScript",
  "license": "MIT",
  "author": "ContextVM",
  "bugs": "https://github.com/ContextVM/ts-sdk/issues",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ContextVM/ts-sdk.git"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "keywords": [
    "contextvendingmachine",
    "ctxvm",
    "nostr",
    "modelcontextprotocol",
    "mcp"
  ],
  "bin": {
    "mcp-nostr-gateway": "./dist/esm/cli/mcp-nostr-gateway.js",
    "mcp-nostr-proxy": "./dist/esm/cli/mcp-nostr-proxy.js"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./core": {
      "import": "./dist/esm/core/index.js",
      "require": "./dist/cjs/core/index.js"
    },
    "./core/*": {
      "import": "./dist/esm/core/*.js",
      "require": "./dist/cjs/core/*.js"
    },
    "./relay": {
      "import": "./dist/esm/relay/index.js",
      "require": "./dist/cjs/relay/index.js"
    },
    "./relay/*": {
      "import": "./dist/esm/relay/*.js",
      "require": "./dist/cjs/relay/*.js"
    },
    "./signer": {
      "import": "./dist/esm/signer/index.js",
      "require": "./dist/cjs/signer/index.js"
    },
    "./signer/*": {
      "import": "./dist/esm/signer/*.js",
      "require": "./dist/cjs/signer/*.js"
    },
    "./gateway": {
      "import": "./dist/esm/gateway/index.js",
      "require": "./dist/cjs/gateway/index.js"
    },
    "./proxy": {
      "import": "./dist/esm/proxy/index.js",
      "require": "./dist/cjs/proxy/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/esm/*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:esm && bun run build:cjs",
    "build:esm": "mkdir -p dist/esm && echo '{\"type\": \"module\"}' > dist/esm/package.json && bun tsc -p tsconfig.prod.json",
    "build:cjs": "mkdir -p dist/cjs && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json && bun tsc -p tsconfig.cjs.json",
    "lint": "eslint src/",
    "test": "bun tests",
    "fmt": "bun prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/bun": "latest",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "nostr-tools": "^2.15.0"
  }
}
